{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es7"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
